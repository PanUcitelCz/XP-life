.form
    display flex
    flex-direction column
    max-width 500px
    width 100%
    background white
    padding 21px 10px // Zvýšené odsazení
    justify-content center
    align-items center
    box-shadow: rgba(17, 12, 46, 0.15) 0px 48px 100px 0px
    border-radius 10px
    gap 10px
    transition ease .3s
    min-height 400px
    box-sizing border-box // Zajistí, že padding je zahrnutý do výpočtu výšky a šířky

    h1
        text-align center

    form
        display flex
        justify-content center
        align-items center
        flex-direction column
        gap 21px
        max-width 400px
        width calc(100% - 10px)
        box-sizing content-box
        padding 10px

        input
            width 100%
            height 40px
            border-radius 10px
            border 0px
            background #F6F5F5
            text-align center
            font-size 21px

    &-buttons
        display flex
        max-width 400px
        width 100%
        justify-content center
        align-items center
        gap 10px

        @media $small-max
            flex-wrap wrap
            

    .notification
        transition all ease .3s
        font-size 30px
        font-weight 600
        color red
        width calc(100% - 10px)
        text-align center

.Main
    width 100%
    min-height: 100vh
    display: flex
    justify-content: center
    align-items: center
    flex-direction: column